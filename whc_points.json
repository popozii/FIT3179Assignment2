{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
 
  "width": 1050,
  "height": 500,
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "background": "#FAFAF8",
  "projection": {"type": "equalEarth", "scale": {"expr": "zoom_level"}},
  "params": [
    {
      "name": "heritageTypeFilter",
      "value": null,
      "bind": {
        "input": "select",
        "options": [null, "Cultural", "Natural", "Mixed"],
        "name": "Filter by Heritage Type:"
      }
    },
    {
  "name": "Year_selection",
  "value": 2000,
  "bind": {
    "input": "range",
    "min": 1980,
    "max": 2023,
    "step": 1,
    "name": "Year: "
  }
},
{
  "name": "zoom_level",
  "value": 150,
  "bind": {
    "input": "range",
    "min": 50,
    "max": 500,
    "step": 10,
    "name": "Zoom: "
  }
},
{
  "name": "continent_selection",
  "value": "All",
  "bind": {
    "input": "select",
    "options": ["All", "Europe and North America", "Asia and the Pacific", "Africa", "Latin America and the Caribbean", "Arab States"],
    "name": "Select Continent: "
  }
}
  ],
  "layer": [
    {
      "data": {"sphere": true},
      "mark": {
        "type": "geoshape",
        "fill": "lightblue",
        "stroke": "steelblue",
        "strokeWidth": 1
      }
    },
    {
      "data": {"graticule": {"step": [30, 30]}},
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#666666",
        "strokeWidth": 0.5,
        "strokeOpacity": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vega/vega-datasets/master/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#e8e8e8",
        "stroke": "white",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vega/vega-datasets/master/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "transform": [
        {
          "lookup": "id",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/popozii/FIT3179Assignment2/main/whc-sites-filtered.csv"
            },
            "key": "country_id",
            "fields": ["site_count"]
          }
        },
        {"filter": "datum.site_count != null"}
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#C7E9C0",
        "stroke": "white",
        "strokeWidth": 0.5
      }
    },
    {
       "data": {
    "url": "https://raw.githubusercontent.com/popozii/FIT3179Assignment2/main/whc-sites-filtered.csv"
  },
  "transform": [
    {
      "filter": "(heritageTypeFilter == null || datum.category == heritageTypeFilter) && (continent_selection == 'All' || datum.region_en == continent_selection) && (datum.date_inscribed == null || datum.date_inscribed <= Year_selection)"
    },
    {
      "aggregate": [{"op": "count", "as": "site_count"}],
      "groupby": ["states_name_en", "longitude", "latitude", "category"]
    },
    {
      "filter": "isValid(datum.longitude) && isValid(datum.longitude) && datum.longitude >= -180 && datum.longitude <= 180 && datum.latitude >= -90 && datum.latitude <= 90"
    },
    {
      "window": [{"op": "rank", "as": "country_rank"}],
      "sort": [{"field": "site_count", "order": "descending"}]
    }
  ],
      "mark": {
        "type": "circle",
        "opacity": 0.6,
        "stroke": "#000",
        "strokeWidth": 1
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "site_count",
          "type": "quantitative",
          "title": "Number of Heritage Sites",
          "scale": {"type": "sqrt", "domain": [1, 60], "range": [50, 2000]},
          "legend": null
        },
        "color": {
          "field": "category",
          "type": "nominal",
          "title": "Heritage Type",
          "scale": {
            "domain": ["Cultural", "Natural", "Mixed"],
            "range": ["#1f77b4", "#ff7f0e", "#2ca02c"]
          },
          "legend": {
            "orient": "bottom",
            "titleFontSize": 12,
            "labelFontSize": 11
          }
        },
        "tooltip": [
          {"field": "states_name_en", "title": "Country"},
          {"field": "category", "title": "Type"},
          {"field": "site_count", "title": "Number of Sites"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/popozii/FIT3179Assignment2/main/whc-sites-filtered.csv"
      },
      "transform": [
        {
  "filter": "(heritageTypeFilter == null || datum.category == heritageTypeFilter) && (continent_selection == 'All' || datum.region_en == continent_selection) && (datum.date_inscribed == null || datum.date_inscribed <= Year_selection)"
},
        {
          "filter": "isValid(datum.longitude) && isValid(datum.latitude) && datum.longitude >= -180 && datum.longitude <= 180 && datum.latitude >= -90 && datum.latitude <= 90"
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0,
        "stroke": "#000",
        "strokeWidth": 1
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {"value": 50},
        "tooltip": [
          {"field": "name_en", "title": "Site"},
          {"field": "states_name_en", "title": "Country"},
          {"field": "category", "title": "Type"},
          {"field": "date_inscribed", "title": "Year"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {"lon": 68.0, "lat": -49.0, "text_lon": 100, "text_lat": -30}
        ]
      },
      "mark": {
        "type": "rule",
        "strokeWidth": 1.5,
        "color": "#e76f51",
        "opacity": 0.7
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "longitude2": {"field": "text_lon"},
        "latitude2": {"field": "text_lat"}
      }
    },
    {
      "data": {
        "values": [
          {"lon": 100, "lat": -30}
        ]
      },
      "mark": {
        "type": "point",
        "size": 80,
        "fill": "#FFFFFF",
        "stroke": "#e76f51",
        "strokeWidth": 2
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"}
      }
    },
    {
      "data": {
        "values": [
          {"lon": 100, "lat": -30, "label": "French Austral Lands and Sea"}
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 12,
        "fontWeight": "bold",
        "dy": -20,
        "color": "#264653",
        "align": "center"
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "label", "type": "nominal"}
      }
    },
    {
      "data": {
        "values": [
          {"lon": 100, "lat": -31, "text": "Marine protected area in Southern Ocean"}
