          {"country": "Italy", "lon": 12.5674, "lat": 41.8719, "rank": "#1", "sites": "58 sites", "text_lon": -15, "text_lat": 30},
          {"country": "China", "lon": 104.1954, "lat": 35.8617, "rank": "#2", "sites": "57 sites", "text_lon": 125, "text_lat": 48},
          {"country": "Germany", "lon": 13.4050, "lat": 52.5200, "rank": "#3", "sites": "52 sites", "text_lon": -10, "text_lat": 59}
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 11,
        "dy": -25,
        "color": "#666666",
        "align": "center"
      },
      "encoding": {
        "longitude": {"field": "text_lon", "type": "quantitative"},
        "latitude": {"field": "text_lat", "type": "quantitative"},
        "text": {"field": "sites", "type": "nominal"}
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "background": "#FAFAF8"
  }
}
