{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "width": 770,
  "height": 400,
  "projection": {
    "type": "mercator",
    "center": [110, 4],
    "scale": 1800
  },
  "params": [
    {
      "name": "selectedYear",
      "value": 2010,
      "bind": {
        "input": "range",
        "min": 1995,
        "max": 2020,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/popozii/FIT3179-Data-Visualisation-2/refs/heads/main/js/ne_110m%20(2).json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_15"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "none",
        "stroke": "#cfcfcf",
        "strokeWidth": 0.6,
        "opacity": 0.6
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/EeGwen/FIT3179-Data-Visualisation-2/refs/heads/main/js/ne_110m%20(2).json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "filter": "datum.properties.ADMIN == 'Malaysia' || datum.properties.ADMIN == 'Indonesia' || datum.properties.ADMIN == 'Thailand' || datum.properties.ADMIN == 'Singapore' || datum.properties.ADMIN == 'Brunei' || datum.properties.ADMIN == 'Philippines' || datum.properties.ADMIN == 'Vietnam'"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.5,
        "fill": "#f3f4f7"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/popozii/FIT3179Assignment2/main/malaysia_state.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "lookup": "properties.admin",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/popozii/FIT3179Assignment2/main/ST.INT.ARVL.csv"
            },
            "key": "Country Name",
            "fields": [
              "1995","1996","1997","1998","1999","2000","2001","2002","2003","2004",
              "2005","2006","2007","2008","2009","2010","2011","2012","2013","2014",
              "2015","2016","2017","2018","2019","2020"
            ]
          },
          "as": [
            "y1995","y1996","y1997","y1998","y1999","y2000","y2001","y2002","y2003","y2004",
            "y2005","y2006","y2007","y2008","y2009","y2010","y2011","y2012","y2013","y2014",
            "y2015","y2016","y2017","y2018","y2019","y2020"
          ]
        },
        {
          "calculate": "toNumber(datum['y' + selectedYear])",
          "as": "Tourism"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "Tourism",
          "type": "quantitative",
          "scale": { "domain": [0, 27000000], "scheme": "blues" },
          "title": "Tourist Arrivals"
        },
        "tooltip": [
          { "field": "properties.name", "title": "State" },
          { "field": "Tourism", "title": "Tourism Arrivals", "format": "," }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/popozii/FIT3179Assignment2/main/whc-sites-2025.csv"
      },
      "transform": [
        { "filter": "datum.states_name_en == 'Malaysia'" },
        {
          "calculate": "toNumber(substring(datum.date_inscribed, 0, 4))",
          "as": "year_inscribed"
        },
        { "filter": "datum.year_inscribed <= selectedYear" }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.9,
        "stroke": "white",
        "strokeWidth": 1,
        "size": 200
      },
      "encoding": {
        "longitude": { "field": "longitude", "type": "quantitative" },
        "latitude": { "field": "latitude", "type": "quantitative" },
        "color": {
          "field": "category",
          "type": "nominal",
          "scale": {
            "domain": ["Cultural", "Natural", "Mixed"],
            "range": ["#1f77b4", "#2ca02c", "#ff7f0e"]
          },
          "title": "Heritage Type"
        },
        "tooltip": [
          { "field": "name", "title": "Heritage Site" },
          { "field": "category", "title": "Type" },
          { "field": "year_inscribed", "title": "Inscribed Year" }
        ]
      }
    },
    {
      "data": {
        "values": [
          {
            "name": "Gunung Mulu National Park",
            "site_lon": 114.93,
            "site_lat": 4.13,
            "label_lon": 116.2,
            "label_lat": 3.5,
            "year": 2000,
            "type": "Natural"
          },
          {
            "name": "Kinabalu Park", 
            "site_lon": 116.55,
            "site_lat": 6.08,
            "label_lon": 118.0,
            "label_lat": 6.7,
            "year": 2000,
            "type": "Natural"
          },
          {
            "name": "Melaka and George Town",
            "site_lon": 102.25,
            "site_lat": 2.19,
            "label_lon": 100.2,
            "label_lat": 1.2,
            "year": 2008,
            "type": "Cultural"
          },
          {
            "name": "Archaeological Heritage of the Lenggong Valley",
            "site_lon": 100.97,
            "site_lat": 5.07,
            "label_lon": 98.8,
            "label_lat": 6.8,
            "year": 2012,
            "type": "Cultural"
          }
        ]
      },
      "transform": [{ "filter": "datum.year <= selectedYear" }],
      "mark": {
        "type": "rule",
        "stroke": "#718096",
        "strokeWidth": 1.5,
        "opacity": 0.8
      },
      "encoding": {
        "longitude": { "field": "site_lon", "type": "quantitative" },
        "latitude": { "field": "site_lat", "type": "quantitative" },
        "longitude2": { "field": "label_lon", "type": "quantitative" },
        "latitude2": { "field": "label_lat", "type": "quantitative" }
      }
    },
    {
      "data": {
        "values": [
          {
            "name": "Gunung Mulu National Park",
            "label_lon": 116.2,
            "label_lat": 3.5,
            "year": 2000,
            "type": "Natural"
          },
          {
            "name": "Kinabalu Park",
            "label_lon": 118.0,
            "label_lat": 6.7,
            "year": 2000,
            "type": "Natural"
          },
          {
            "name": "Melaka and George Town",
            "label_lon": 100.2,
            "label_lat": 1.2,
            "year": 2008,
            "type": "Cultural"
          },
          {
            "name": "Archaeological Heritage of the Lenggong Valley",
            "label_lon": 98.8,
            "label_lat": 6.8,
            "year": 2012,
            "type": "Cultural"
          }
        ]
      },
      "transform": [{ "filter": "datum.year <= selectedYear" }],
      "mark": {
        "type": "text",
        "dy": 0,
        "dx": 0,
        "fontSize": 13,
        "fontWeight": "bold",
        "color": "#1a365d",
        "align": "left"
      },
      "encoding": {
        "longitude": { "field": "label_lon", "type": "quantitative" },
        "latitude": { "field": "label_lat", "type": "quantitative" },
        "text": { "field": "name" }
      }
    },
    {
      "data": {
        "values": [
          {
            "label_lon": 116.2,
            "label_lat": 3.5,
            "year": 2000,
            "type": "Natural"
          },
          {
            "label_lon": 118.0,
            "label_lat": 6.7,
            "year": 2000,
            "type": "Natural"
          },
          {
            "label_lon": 100.2,
            "label_lat": 1.2,
            "year": 2008,
            "type": "Cultural"
          },
          {
            "label_lon": 98.8,
            "label_lat": 6.8,
            "year": 2012,
            "type": "Cultural"
          }
        ]
      },
      "transform": [{ "filter": "datum.year <= selectedYear" }],
      "mark": {
        "type": "text",
        "dy": 15,
        "dx": 0,
        "fontSize": 11,
        "fontWeight": "normal",
        "color": "#4a5568",
        "align": "left",
        "fontStyle": "italic"
      },
      "encoding": {
        "longitude": { "field": "label_lon", "type": "quantitative" },
        "latitude": { "field": "label_lat", "type": "quantitative" },
        "text": { "field": "type" }
      }
    },
    {
      "data": {"values": [{}]},
      "transform": [{ "calculate": "selectedYear", "as": "year" }],
      "mark": {
        "type": "text",
        "x": 760,
        "y": 40,
        "fontSize": 26,
        "fontWeight": "bold",
        "align": "right",
        "color": "#333"
      },
      "encoding": { "text": { "field": "year" } }
    }
  ],
  "config": {
    "view": { "stroke": null },
    "background": "transparent"
  }
}
