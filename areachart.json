{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "title": "Cumulative Growth of UNESCO World Heritage Sites",
  "data": {
    "url": "whc-sites-2025.csv"
  },
  "transform": [
    {
      "filter": "isValid(datum.date_inscribed) && datum.date_inscribed >= 1978"
    },
    {
      "window": [{"op": "count", "as": "cumulative_count"}],
      "sort": [{"field": "date_inscribed"}],
      "groupby": ["category"]
    }
  ],
  "mark": {
    "type": "area",
    "line": true,
    "point": false,
    "opacity": 0.7
  },
  "encoding": {
    "x": {
      "field": "date_inscribed",
      "type": "temporal",
      "title": "Year",
      "axis": {"format": "%Y"}
    },
    "y": {
      "field": "cumulative_count",
      "type": "quantitative",
      "title": "Cumulative Number of Sites"
    },
    "color": {
      "field": "category",
      "type": "nominal",
      "title": "Site Type",
      "scale": {
        "domain": ["Cultural", "Natural", "Mixed"],
        "range": ["#3498db", "#27ae60", "#e67e22"]
      }
    },
    "tooltip": [
      {"field": "date_inscribed", "title": "Year", "type": "temporal", "format": "%Y"},
      {"field": "category", "title": "Type", "type": "nominal"},
      {"field": "cumulative_count", "title": "Cumulative Sites", "type": "quantitative", "format": ","}
    ]
  },
  "config": {
    "view": {"stroke": null}
  }
}