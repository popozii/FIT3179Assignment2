{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "title": "Top 15 Countries by Number of UNESCO Heritage Sites",
  "data": {
    "url": "whc-sites-2025.csv"
  },
  "transform": [
    {
      "aggregate": [{"op": "count", "as": "site_count"}],
      "groupby": ["states_name_en"]
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "site_count", "order": "descending"}]
    },
    {
      "filter": "datum.rank <= 15"
    },
    {
      "calculate": "datum.rank <= 3 ? 'Top 3' : 'Other'",
      "as": "highlight"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "bar",
        "cornerRadius": 3
      },
      "encoding": {
        "x": {
          "field": "states_name_en",
          "type": "ordinal",
          "sort": {"field": "site_count", "order": "descending"},
          "title": "Country",
          "axis": {"labelAngle": -45}
        },
        "y": {
          "field": "site_count",
          "type": "quantitative",
          "title": "Number of Sites"
        },
        "color": {
          "field": "highlight",
          "type": "nominal",
          "scale": {
            "domain": ["Top 3", "Other"],
            "range": ["#e74c3c", "#3498db"]
          },
          "title": null,
          "legend": null
        },
        "tooltip": [
          {"field": "states_name_en", "title": "Country", "type": "nominal"},
          {"field": "site_count", "title": "Number of Sites", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "transform": [{
        "aggregate": [{"op": "mean", "field": "site_count", "as": "avg_sites"}]
      }],
      "mark": {
        "type": "rule",
        "color": "#e74c3c",
        "strokeDash": [6, 3],
        "strokeWidth": 2
      },
      "encoding": {
        "y": {"field": "avg_sites", "type": "quantitative"}
      }
    },
    {
      "transform": [{
        "aggregate": [{"op": "mean", "field": "site_count", "as": "avg_sites"}]
      }],
      "mark": {
        "type": "text",
        "align": "right",
        "dx": -5,
        "dy": -8,
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "#e74c3c"
      },
      "encoding": {
        "y": {"field": "avg_sites", "type": "quantitative"},
        "text": {"value": "Average"}
      }
    }
  ],
  "config": {
    "axis": {"grid": true},
    "view": {"stroke": null}
  }
}